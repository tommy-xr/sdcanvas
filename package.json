{
  "name": "sdcanvas",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:core && npm run build:cli && tsc -b && vite build",
    "build:core": "npm run build -w @sdcanvas/core",
    "build:cli": "npm run build -w @sdcanvas/cli",
    "lint": "eslint .",
    "preview": "vite preview",
    "cli": "node packages/cli/dist/index.js",
    "validate": "bash -c 'shopt -s nullglob; files=(examples/*.json examples/*.yaml examples/*.yml); if [ ${#files[@]} -eq 0 ]; then echo \"No canvas files found\"; exit 1; fi; for file in \"${files[@]}\"; do echo \"Validating: $file\"; npm run cli -- validate \"$file\"; done; echo \"All canvas files validated!\"'",
    "test:simulate": "node scripts/validate-simulations.mjs"
  },
  "dependencies": {
    "@xyflow/react": "^12.10.0",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.561.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
